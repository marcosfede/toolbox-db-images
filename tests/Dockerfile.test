FROM python:3.11-slim

LABEL description="MCP Database Server Test Runner"
LABEL version="2.0.0"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    netcat-openbsd \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies
COPY tests/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the unified test script
COPY tests/test_all.py /app/test_all.py
RUN chmod +x /app/test_all.py

# Create results directory
RUN mkdir -p /app/results

# Set environment variables
ENV PYTHONPATH=/app

# Default command - run unified test suite
CMD ["python", "/app/test_all.py"]